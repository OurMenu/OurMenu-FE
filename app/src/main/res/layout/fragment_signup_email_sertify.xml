<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cl_signup_email">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/tv_email_sended"
        android:text="메일을 보냈습니다!"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="92dp"
        android:textSize="24sp"
        android:fontFamily="@font/pretendard_semibold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_email_sended"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/tv_required"
        android:text="아래 인증 코드를 입력해주세요."
        android:textSize="14sp"
        android:textColor="@color/Neutral_500"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="4dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_required"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/ll_sertify_code_enter"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="12dp">

        <EditText
            android:id="@+id/et_sertify_code_1"
            android:layout_width="37dp"
            android:layout_height="44dp"
            android:textSize="12sp"
            android:textColor="@color/Neutral_900"
            android:paddingVertical="15dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/pretendard_semibold"
            android:background="@drawable/edittext_shape_bordered"
            android:paddingLeft="10dp"/>
        <EditText
            android:id="@+id/et_sertify_code_2"
            android:layout_width="37dp"
            android:layout_height="44dp"
            android:textSize="12sp"
            android:textColor="@color/Neutral_900"
            android:paddingVertical="15dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/pretendard_semibold"
            android:background="@drawable/edittext_shape_bordered"
            android:paddingLeft="10dp"/>
        <EditText
            android:id="@+id/et_sertify_code_3"
            android:layout_width="37dp"
            android:layout_height="44dp"
            android:textSize="12sp"
            android:textColor="@color/Neutral_900"
            android:paddingVertical="15dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/pretendard_semibold"
            android:background="@drawable/edittext_shape_bordered"
            android:paddingLeft="10dp"/>
        <EditText
            android:id="@+id/et_sertify_code_4"
            android:layout_width="37dp"
            android:layout_height="44dp"
            android:textSize="12sp"
            android:textColor="@color/Neutral_900"
            android:paddingVertical="15dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/pretendard_semibold"
            android:background="@drawable/edittext_shape_bordered"
            android:paddingLeft="10dp"/>
        <EditText
            android:id="@+id/et_sertify_code_5"
            android:layout_width="37dp"
            android:layout_height="44dp"
            android:textSize="12sp"
            android:textColor="@color/Neutral_900"
            android:paddingVertical="15dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/pretendard_semibold"
            android:background="@drawable/edittext_shape_bordered"
            android:paddingLeft="10dp"/>
        <EditText
            android:id="@+id/et_sertify_code_6"
            android:layout_width="37dp"
            android:layout_height="44dp"
            android:textSize="12sp"
            android:textColor="@color/Neutral_900"
            android:paddingVertical="15dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/pretendard_semibold"
            android:background="@drawable/edittext_shape_bordered"
            android:paddingLeft="10dp"/>

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/button_shape_create"
        android:textColor="@color/Neutral_White"
        android:text="확인"
        android:fontFamily="@font/semibold"/>

</androidx.constraintlayout.widget.ConstraintLayout>