<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cl_signup_email"
    android:clipToPadding="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/tv_pw_enter"
        android:text="사용할 닉네임을 입력해주세요."
        android:layout_marginLeft="20dp"
        android:layout_marginTop="92dp"
        android:textSize="24sp"
        android:fontFamily="@font/pretendard_semibold"
        android:backgroundTint="@null"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_pw_enter"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/tv_required"
        android:text="나중에 수정할 수 있으니 걱정마세요!"
        android:textSize="14sp"
        android:textColor="@color/Neutral_500"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@null"/>

    <EditText
        android:id="@+id/et_password_enter"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:hint="최대 6자"
        app:layout_constraintTop_toBottomOf="@id/tv_required"
        android:textSize="12sp"
        android:textColorHint="@color/Neutral_500"
        android:textColor="@color/Neutral_700"
        android:fontFamily="@font/pretendard_semibold"
        android:background="@drawable/edittext_shape_bordered"
        android:paddingHorizontal="28dp"
        android:inputType="textPassword"
        app:backgroundTint="@null"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="12dp"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/button_shape_create"
        android:textColor="@color/Neutral_White"
        android:text="확인"
        android:backgroundTint="@null"
        android:fontFamily="@font/semibold"/>

</androidx.constraintlayout.widget.ConstraintLayout>