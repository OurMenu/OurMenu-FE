<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cl_signup_email"
    android:clipToPadding="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/tv_enter_email"
        android:text="이메일을 입력해주세요."
        android:layout_marginLeft="20dp"
        android:layout_marginTop="92dp"
        android:textSize="24sp"
        android:fontFamily="@font/pretendard_semibold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_enter_email"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/tv_required"
        android:text="로그인 및 회원가입, 본인확인에 필요합니다."
        android:textSize="14sp"
        android:textColor="@color/Neutral_500"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="4dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_required"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/ll_email_enter"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="12dp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="173"
            android:hint="default"
            android:textSize="12sp"
            android:textColorHint="@color/Neutral_500"
            android:textColor="@color/Neutral_700"
            android:paddingVertical="15dp"
            android:fontFamily="@font/pretendard_semibold"
            android:background="@drawable/edittext_shape_bordered"
            android:paddingLeft="28dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="21"
            android:text="\@"
            android:paddingHorizontal="6dp"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="@color/Neutral_500"/>
        <Spinner
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="122"
            android:paddingLeft="17.5dp"
            android:background="@drawable/spinner_shape_bordered"
            android:popupBackground="@color/Neutral_White" />
    </LinearLayout>
    <Button
        android:elevation="100dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/button_bg_enabled"
        android:textColor="@color/Neutral_White"
        android:text="인증 메일 보내기"
        app:backgroundTint="@null"
        android:fontFamily="@font/semibold"
        />

</androidx.constraintlayout.widget.ConstraintLayout>