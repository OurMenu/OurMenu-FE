<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cl_signup_email">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/tv_pw_enter"
        android:text="비밀번호를 입력해주세요."
        android:layout_marginLeft="20dp"
        android:layout_marginTop="92dp"
        android:textSize="24sp"
        android:fontFamily="@font/pretendard_semibold"
        android:backgroundTint="@null"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_pw_enter"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/tv_required"
        android:text="영문, 숫자, 특수문자 포함 8자 이상"
        android:textSize="14sp"
        android:textColor="@color/Neutral_500"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@null"/>
    <FrameLayout
        android:id="@+id/fl_password_enter"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:layout_constraintTop_toBottomOf="@id/tv_required"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="12dp">

        <EditText
            android:id="@+id/et_password_enter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="173"
            android:hint="강력한 비밀번호를 만들어주세요!"
            android:textSize="12sp"
            android:textColorHint="@color/Neutral_500"
            android:textColor="@color/Neutral_700"
            android:fontFamily="@font/pretendard_semibold"
            android:background="@drawable/edittext_shape_bordered"
            android:paddingHorizontal="28dp"
            android:inputType="textPassword"
            android:visibility="visible"
            android:backgroundTint="@null"/>

        <ImageView
            android:id="@+id/iv_password_check"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitEnd"
            android:src="@drawable/ic_password_check"
            android:paddingVertical="14dp"
            android:paddingRight="28dp"
            android:visibility="invisible"
            android:backgroundTint="@null"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_password_check"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:layout_constraintTop_toBottomOf="@id/fl_password_enter"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="12dp">

        <EditText
            android:id="@+id/et_password_check"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="173"
            android:hint="비밀번호를 한 번 더 확인해주세요."
            android:textSize="12sp"
            android:textColorHint="@color/Neutral_500"
            android:textColor="@color/Neutral_700"
            android:fontFamily="@font/pretendard_semibold"
            android:background="@drawable/edittext_shape_bordered"
            android:paddingHorizontal="28dp"
            android:inputType="textPassword"
            android:backgroundTint="@null"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/iv_password_check_check"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitEnd"
            android:src="@drawable/ic_password_check"
            android:paddingVertical="14dp"
            android:paddingRight="28dp"
            android:backgroundTint="@null"
            android:visibility="invisible"/>

    </FrameLayout>

    <CheckBox
        android:id="@+id/cb_show_password"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/fl_password_check"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12.5dp"
        android:layout_marginLeft="20dp"
        android:button="@null"
        android:backgroundTint="@null"
        android:background="@drawable/checkbox_shape"
        android:buttonTint="@color/Neutral_500"
        android:checked="false"/>

    <TextView
        android:id="@+id/tv_show_password"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        app:layout_constraintTop_toBottomOf="@id/fl_password_check"
        app:layout_constraintStart_toEndOf="@id/cb_show_password"
        android:text="비밀번호 보기"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="8dp"
        android:textSize="14sp"
        android:textColor="@color/Neutral_500"
        android:fontFamily="@font/pretendard_regular"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/button_shape_create"
        android:textColor="@color/Neutral_White"
        android:text="확인"
        android:backgroundTint="@null"
        android:fontFamily="@font/semibold"/>

</androidx.constraintlayout.widget.ConstraintLayout>