<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".account.LoginFragment">

    <ImageView
        android:id="@+id/iv_login_logo"
        android:layout_width="158dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/ic_logo_ourmenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_login_id"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/edittext_bg_normal"
        android:fontFamily="@font/pretendard_700"
        android:hint="ID / E-mail"
        android:textColorHint="@color/Neutral_500"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_login_logo" />

    <EditText
        android:id="@+id/et_login_password"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittext_bg_normal"
        android:fontFamily="@font/pretendard_700"
        android:hint="Password"
        android:textColorHint="@color/Neutral_500"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_login_id" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/cb_login_show_password"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="8.5dp"
        android:button="@drawable/checkbox_bg"
        app:layout_constraintStart_toStartOf="@id/et_login_password"
        app:layout_constraintTop_toBottomOf="@id/et_login_password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/pretendard_500"
        android:text="비밀번호 보기"
        android:textColor="@color/Neutral_500"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/cb_login_show_password"
        app:layout_constraintStart_toEndOf="@id/cb_login_show_password"
        app:layout_constraintTop_toTopOf="@id/cb_login_show_password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_500"
        android:text="비밀번호 찾기"
        android:textColor="@color/Neutral_500"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/et_login_password"
        app:layout_constraintTop_toTopOf="@id/cb_login_show_password" />

    <Button
        android:id="@+id/btn_login_login"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="53dp"
        android:background="@drawable/button_bg_enabled"
        android:elevation="6dp"
        android:fontFamily="@font/pretendard_700"
        android:stateListAnimator="@null"
        android:text="@string/login"
        android:textColor="@color/Neutral_White"
        android:textSize="16sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_login_password" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/cb_login_maintain"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="8.5dp"
        android:button="@drawable/checkbox_bg"
        app:layout_constraintStart_toStartOf="@id/btn_login_login"
        app:layout_constraintTop_toBottomOf="@id/btn_login_login" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/pretendard_500"
        android:text="로그인 상태 유지"
        android:textColor="@color/Neutral_500"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/cb_login_maintain"
        app:layout_constraintStart_toEndOf="@id/cb_login_maintain"
        app:layout_constraintTop_toTopOf="@id/cb_login_maintain" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="139dp"
        android:fontFamily="@font/pretendard_500"
        android:text="계정이 없으신가요?"
        android:textColor="@color/Neutral_500"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_login_login" />

    <Button
        android:id="@+id/btn_login_signup"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="184dp"
        android:background="@drawable/button_bg_outlined"
        android:fontFamily="@font/pretendard_500"
        android:stateListAnimator="@null"
        android:text="@string/signup"
        android:textColor="@color/Primary_500_main"
        android:textSize="16sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_login_login" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="59dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_logo_ourmenu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/pretendard_400"
            android:text="@string/copyright"
            android:textColor="@color/Neutral_500"
            android:textSize="10sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>