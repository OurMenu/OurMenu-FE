<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".account.LoginFragment">

    <ImageView
        android:id="@+id/iv_login_logo"
        android:layout_width="158dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/ic_logo_ourmenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_login_id"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/edittext_bg_normal"
        android:fontFamily="@font/pretendard_bold"
        android:hint="ID / E-mail"
        android:textColor="@color/Neutral_500"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_login_logo" />

    <EditText
        android:id="@+id/et_login_password"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittext_bg_normal"
        android:fontFamily="@font/pretendard_bold"
        android:hint="Password"
        android:textColor="@color/Neutral_500"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_login_id" />

    <Button
        android:id="@+id/b_login_login"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_bg_enabled"
        android:fontFamily="@font/pretendard_regular"
        android:text="@string/login"
        android:textColor="@color/Neutral_White"
        android:textFontWeight="700"
        android:textSize="16sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_login_password" />

    <CheckBox
        android:id="@+id/cb_maintain_login"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="12.5dp"
        android:button="@drawable/checkbox_bg"
        app:layout_constraintStart_toStartOf="@id/b_login_login"
        app:layout_constraintTop_toBottomOf="@id/b_login_login" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/pretendard_regular"
        android:text="로그인 상태 유지"
        android:textColor="@color/Neutral_500"
        android:textFontWeight="500"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/cb_maintain_login"
        app:layout_constraintStart_toEndOf="@id/cb_maintain_login"
        app:layout_constraintTop_toTopOf="@id/cb_maintain_login" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="57dp"
        android:background="@color/Neutral_300"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/b_login_login" />

    <TextView
        android:id="@+id/tv_find_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:fontFamily="@font/pretendard_regular"
        android:text="아이디 찾기"
        android:textColor="@color/Neutral_500"
        android:textFontWeight="500"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/b_login_login"
        app:layout_constraintTop_toBottomOf="@id/b_login_login" />

    <View
        android:layout_width="1dp"
        android:layout_height="12dp"
        app:layout_constraintStart_toEndOf="@id/tv_find_id"
        app:layout_constraintTop_toTopOf="@id/tv_find_id"
        app:layout_constraintBottom_toBottomOf="@id/tv_find_id"
        android:layout_marginStart="8dp"
        android:background="@color/Neutral_500" />

    <TextView
        android:id="@+id/tv_find_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/pretendard_regular"
        android:text="비밀번호 찾기"
        android:textColor="@color/Neutral_500"
        android:textFontWeight="500"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/b_login_login"
        app:layout_constraintStart_toEndOf="@id/tv_find_id" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/b_login_login"
        android:text="계정이 없으신가요?"
        android:layout_marginTop="139dp"
        android:textColor="@color/Neutral_500"
        android:textSize="14sp"
        android:fontFamily="@font/pretendard_regular"
        android:textFontWeight="500" />

    <Button
        android:id="@+id/b_login_signup"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="184dp"
        android:background="@drawable/button_bg_outlined"
        android:fontFamily="@font/pretendard_regular"
        android:text="@string/signup"
        android:textColor="@color/Primary_500_main"
        android:textFontWeight="500"
        android:textSize="16sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/b_login_login" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/iv_logo_copyright"
            android:layout_width="59dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_logo_ourmenu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/pretendard_regular"
            android:text="@string/copyright"
            android:textColor="@color/Neutral_500"
            android:textSize="10sp" />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>